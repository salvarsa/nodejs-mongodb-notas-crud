<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header mx-auto">
                REGISTRARSE
                </div>
                <div class="card-body">
                    <form action="/users/singup" method="post">
                         <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                         </div>
                           <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Correo electronico" value="{{email}}">
                         </div>
                         <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Contraseña">
                         </div>
                           <div class="form-group">
                            <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar contraseña">
                         </div>
                         <button class="btn btn-primary btn-block">Crear cuenta</button>
                    </form>
                </div>
        </div>
    </div>
</div>